<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/iv_hinh_nen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/tv_gio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="70sp"
        android:textColor="#ffffff"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/tv_phut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_gio"
        android:textSize="70sp"
        android:textColor="#ffffff"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/tv_ngay_thang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_phut"
        android:textSize="16sp"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/iv_nhan_dang_khuan_mat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_nhan_dang_khuan_mat"/>

</RelativeLayout>