<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.manhdd.nuce.khoamanhinhnhandangkhuanmat.manhinh.ManHinhNhanDang">

    <com.manhdd.nuce.khoamanhinhnhandangkhuanmat.view.JavaCameraView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/camera_view" />

    <ImageView
        android:id="@+id/iv_quay_lai"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_quay_lai"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/bt_nhan_dang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#66000000"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
